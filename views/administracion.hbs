<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<link href="https://fonts.googleapis.com/css?family=Rubik:400,700,900" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/css/app.css">
	<title>{{nombrePagina}}</title>
</head>
<body>
	
	{{> menu}}

	<header class="site-header contenedor separador">
		<h2>{{nombrePagina}}</h2>

		{{#if tagline}}
			<p class="tagline">{{tagline}}</p>
		{{/if}}

		{{#if boton}}
			<a href="/vacantes/nueva" class="btn btn-azul">Publicar Nueva Vacante</a>
		{{/if}}
	</header>

	<main class="lista-vacantes">
		<h2>Navegacion</h2>

		<div class="botones separador">
			<a href="/editar-perfil" class="btn btn-azul">Editar Perfil</a>
			<a href="/vacantes/nueva" class="btn btn-verde">Nueva Vacante</a>
		</div>
	</main>

	<h2>Tus vacantes</h2>
	
	<div class="panel-administracion">
		{{#if vacantes.length}}
			{{#each vacantes}}
				<div class="vacante">
					<div class="caja">
						<h3>{{empresa}}</h3>
						<p class="puesto">{{titulo}}</p>
						<p class="candidatos">
							{{candidatos.length}} Candidato(s)
						</p>
					</div>

					<div class="centrar-vertical caja">
						<a href="/candidatos/{{id}}" class="btn btn-amarillo">Candidatos</a>
					</div>

					<div class="centrar-vertical caja">
						<a href="/vacantes/editar/{{url}}" class="btn btn-verde">Editar</a>
					</div>

					<div class="centrar-vertical caja">
						<a href="#" data-eliminar={{id}} class="btn btn-rojo">Eliminar</a>
					</div>
				</div>
			{{/each}}
		{{else}}
			<p class="text-light text-center">No hay vacantes, crea una</p>
		{{/if}}

		{{#if mensajes}}
			<div class="alertas">
				{{#mostrarAlertas mensajes}}
				{{/mostrarAlertas}}
			</div>
		{{/if}}
	</div>

	<script type="text/javascript" src="/dist/bundle.js"></script>
</body>
</html>