<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<link href="https://fonts.googleapis.com/css?family=Rubik:400,700,900" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/css/app.css">
	<title>{{nombrePagina}}</title>
</head>
<body>

	{{> menu}}

	<header class="site-header contenedor separador">
		<h2>{{nombrePagina}}</h2>

		<p class="tagline">{{tagline}}</p>
	</header>

	<main class="contenedor">
		<form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
			<div class="campo">
				<label>Nombre</label>
				<input value={{usuario.nombre}} type="text" name="nombre" placeholder="Tu Nombre" >
			</div>

			<div class="campo">
				<label>E-mail</label>
				<input value={{usuario.email}} type="email" name="email" placeholder="Tu E-mail" >
			</div>

			<div class="campo">
				<label>Password</label>
				<input type="password" name="password" placeholder="Tu password">
			</div>

			<div class="campo">
				<label>Imagen</label>
				<input type="file" name="imagen" placeholder="Tu imagen de perfil" />
			</div>

			<div class="campo">
				<input type="submit" class="btn btn-azul" value="Guardar Cambios" />
			</div>
		</form>
	</main>

	{{#if mensajes}}
		<div class="alertas">
			{{#mostrarAlertas mensajes}}
			{{/mostrarAlertas}}
		</div>
	{{/if}}
	
	<script type="text/javascript" src="/dist/bundle.js"></script>
</body>
</html>